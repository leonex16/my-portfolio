---
interface Props {
  words: string[];
}

const { words } = Astro.props as Props
const typewriterId = `typewriter-${new Date().getTime()}`;
---

<script is:inline src="/libs/typewriter-js/typewriter-js.min.js"></script>
<script is:inline define:vars={{ words, typewriterId }} >
document.onreadystatechange = function () {
  if (document.readyState == 'interactive') {
    new Typewriter(`#${typewriterId}`, {
      strings: words,
      autoStart: true,
      loop: true
    }).start()
    document.querySelector('.Typewriter__wrapper').className += ' bg-gradient-to-l from-blue-500 to-blue-600 bg-clip-text text-transparent';
  }
}
</script>

<span id={typewriterId}></span>
