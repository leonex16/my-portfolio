---
import NetworkLoader from '../components/astro/network-loader/index.astro'
import ParticlesBg from '../components/astro/particles-bg/index.astro'

import openGraphImage from '../../public/images/open-graph.jpg'

const TITLE = 'Leonel Espinoza Sotelo | Desarrollador Web, Mobile, Services'
const DESCRIPTION = 'Desarrollo de aplicaciones y/o servicios mediante tecnolog√≠as modernas. Javascript | Typescript | Node Js | Rust | Flutter | AWS'
const URL = 'https://leonel-espinoza.tiiny.site';

---

<html lang="es">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{TITLE}</title>

	<meta name="description" content={DESCRIPTION}>
	<meta name="theme-color" content="#0F172A">
	<meta name="google" content="nositelinkssearchbox">

	<meta name="twitter:card" content={DESCRIPTION}>
	<meta name="twitter:url" content={URL}>
	<meta name="twitter:title" content={TITLE}>
	<meta name="twitter:description" content={DESCRIPTION}>
	<meta name="twitter:image" content={openGraphImage}>

	<meta property="fb:app_id" content="123456789">
	<meta property="og:url" content={URL}>
	<meta property="og:type" content="website">
	<meta property="og:title" content={TITLE}>
	<meta property="og:image" content={openGraphImage}>
	<meta property="og:description" content={DESCRIPTION}>
	<meta property="og:site_name" content="Portafolio Leonel Espinoza">
	<meta property="og:locale" content="es_CL">
	<meta property="article:author" content="Leonel Espinoza Sotelo">

	<script>
		const setScreenMinHeight = () => document.documentElement.style.setProperty('--h-screen', `${window.innerHeight}px`)

		window.addEventListener('resize', setScreenMinHeight)

		setScreenMinHeight()
	</script>
</head>

<body class="p-4 h-0 overflow-y-hidden" style="min-height: var(--h-screen);">
	<ParticlesBg />
	<NetworkLoader />
	<slot />
</body>

</html>
